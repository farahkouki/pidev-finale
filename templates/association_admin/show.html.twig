{% extends 'base1.html.twig' %}

{% block title %}Association{% endblock %}

{% block body %}
    <div style="text-align: center; margin-top: 50px;"> <!-- Centre le contenu et ajoute un espacement au-dessus -->

    <h1>Liste des associations</h1>
<br>
<br>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ association.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ association.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ association.description }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ association.adresse }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ association.email }}</td>
            </tr>
            <tr>
                <th>NumeroTelephone</th>
                <td>{{ association.numeroTelephone }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ association.dateCreation ? association.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_association_admin_index') }}">back to list</a>


    {{ include('association_admin/_delete_form.html.twig') }}
{% endblock %}
