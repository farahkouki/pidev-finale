    <div class="container">
        <h1>Association</h1>
        <table class="table">
            <tr>
                <td class="green-text"><strong>Nom:</strong></td>
                <td>{{ association.nom }}</td>
            </tr>
            <tr>
                <td class="green-text"><strong>Description:</strong></td>
                <td>{{ association.Description }}</td>
            </tr>
            <tr>
