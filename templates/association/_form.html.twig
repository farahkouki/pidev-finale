{# templates/association/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'custom-form custom-form-background'}}) }}
<h2 class="mb-4">Create a new association</h2>

<div class="form-group row mt-3">
    <div class="col-sm-8">
        {{ form_row(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom de l\'association'}}) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-8">
        {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description'}}) }}
    </div>
    <div class="col-sm-4">
        {{ form_row(form.dateCreation, {'attr': {'class': 'form-control', 'placeholder': 'Date de création'}}) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-8">
        {{ form_row(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Adresse'}}) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-8">
        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
    </div>
</div>

<div class="form-group row">
    <div class="col-sm-8">
        {{ form_row(form.numeroTelephone, {'attr': {'class': 'form-control', 'placeholder': 'Numéro de téléphone'}}) }}
    </div>
</div>

<button type="submit" class="btn btn-success btn-block mt-3 custom-button">Enregistrer</button>
{{ form_end(form) }}
