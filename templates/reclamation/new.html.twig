

{% extends 'base.html.twig' %}

{% block title %}Nouvelle Reclamation{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Nouvelle Réclamation</h1>
                <form method="post" action="{{ path('app_reclamation_new') }}">
                    {{ form_start(form) }}
                    <div style="color: white;margin-bottom: 5px">
                        {{ form_label(form.message) }}
                        {{ form_widget(form.message, {'attr': {'class': 'form-control', 'style': 'color: white; border: 1px solid white'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary">Créer</button>
                    <a href="{{ path('app_reclamation_new') }}" class="btn btn-secondary">Retour à la liste</a>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
